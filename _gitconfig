[core]
	quotepath = false
	editor = vim
[alias]
	st = status
    co = checkout
    rr = !git reset --hard
    l = !git log --pretty=format:\"%C(magenta)%h%Creset -%C(red)%d%Creset %s %C(dim green)(%cr) [%an]\" --abbrev-commit -30
    cd = checkout develop
    cd = checkout main 
    br = branch
    ; Log _ file diff
    fl = log -u
    sw = switch
[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta
[delta]
    plus-style = "syntax #012800"
    minus-style = "syntax #340001"
    syntax-theme = Monokai Extended
    navigate = true
    side-by-side = true
[interactive]
    diffFilter = delta --color-only
